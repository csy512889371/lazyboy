#ifndef MOVESORT_TYPE_H_
#define MOVESORT_TYPE_H_

#include "base.h"
#include "position.h"

// 着法分类
const int SORT_TYPE_OTHER = 0;
const int SORT_TYPE_KILLER = 1;
const int SORT_TYPE_NICE_CAP = 2;
const int SORT_TYPE_CHECK = 3;
const int SORT_TYPE_HASHTABLE = 4;
const int MAX_SORT_TYPE = 4;

// 着法排序结构体
struct MoveSortStruct {
	int move[128];	// 着法表
	int nMoveIndex;	// 索引下标
	int nMoveNum;	// 着法表长度

	void InitAlphaBeta ( void ); // 为SearchPV生成着法
	int NextAlphaBeta ( void ) { // 为SearchPV提供下一个着法
		if ( nMoveIndex < nMoveNum ) {
			nMoveIndex ++;
			return move [ nMoveIndex-1 ];
		}
		else {
			return 0;
		}
	}
};


#endif /* MOVESORT_TYPE_H_ */
