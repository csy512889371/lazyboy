#ifndef SEARCH_H_
#define SEARCH_H_

#include "base.h"
#include "position.h"
#include "rollback.h"

const int SEARCH_MAX_DEPTH = 80;

extern PositionStruct pos; // 当前搜索局面
extern RollBackListStruct roll; // 回滚着法表

// 搜索结构体
const int nBest = 128;
struct SearchStruct {
	int bmv[nBest]; // 最佳着法
	int bvl[nBest]; // 最优得分
	int nNode; // 总节点数
	int nBeta; // beta点个数
	int depth;
};
extern SearchStruct Search;

// 搜索树
const int NNODE = 1000010;
struct SearchTreeStruct {
	int to;
	int mv;
	int next;
};
extern SearchTreeStruct SearchTree[NNODE];
extern int head[NNODE];
extern int nNode;
extern int nEdge;

inline void InitSearchTree ( void ) {
	for ( int i = 0; i < NNODE; i ++ ) {
		head[i] = -1;
		SearchTree[i].to = 0;
		SearchTree[i].mv = 0;
		SearchTree[i].next = -1;
	}
	nNode = 0;
	nEdge = 0;
}

inline void AddEdge ( const int a, const int b, const int mv ) {
	int t = ++ nEdge;
	SearchTree[a].to = b;
	SearchTree[a].mv = mv;
	SearchTree[a].next = head[a];
	head[a] = t;
}

inline void DelEdge (  ) {

}

int SearchMain ( void );

#endif /* SEARCH_H_ */
