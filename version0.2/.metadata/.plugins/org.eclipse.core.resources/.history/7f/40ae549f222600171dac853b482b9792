#ifndef MOVESORT_H_
#define MOVESORT_H_

#include "base.h"
#include "position.h"

// 着法分类
const int SORT_OTHER = 0;
const int SORT_KILLER = 1;
const int SORT_NICE_CAP = 2;
const int SORT_CHECK = 3;
const int SORT_ZOBRIST = 4;

struct MoveSortStruct {
	int move[128];	// 着法表
	int nMoveIndex;	// 索引下标
	int nMoveNum;	// 着法表长度

	void InitAlphaBeta ( void ); // 为SearchPV生成着法
	int NextAlphaBeta ( void ) { // 为SearchPV提供下一个着法
		if ( nMoveIndex < nMoveNum ) {
			nMoveIndex ++;
			return move [ nMoveIndex-1 ];
		}
		else {
			return 0;
		}
	}
};


#endif /* MOVESORT_H_ */
