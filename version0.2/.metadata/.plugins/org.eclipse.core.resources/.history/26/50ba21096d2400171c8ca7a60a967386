#include "time.h"
#include "base.h"
#include <ctime>
#ifdef WIN_32
#include <windows.h>
#endif

double TimeLimit = 10.0; // 默认10秒

#ifdef WIN_32
	SYSTEMTIME time;
	long startT;
#else
	clock_t startT;
#endif

// 设置时间限制
void SetTimeLimit ( const double limit ) {
	TimeLimit = limit;
}

// 初始化开始时间
void InitBeginTime ( void ) {
#ifdef WIN_32
	GetSystemTime ( &time );
	starT = time.wSecond * 1000 + time.wMilliseconds;
#else
	startT = clock();
#endif
}

// 已超时
bool TimeOut ( void ) {

}
